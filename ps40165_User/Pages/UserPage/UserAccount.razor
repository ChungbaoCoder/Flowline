@page "/user/account"
@layout AccountLayout

<h2 class="mb-4">👤 Thông tin tài khoản</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4 text-center">
                <img src="@user.ProfileImageUrl" alt="Avatar" class="rounded-circle img-thumbnail" style="width: 150px;" />
            </div>
            <div class="col-md-8">
                <h4>@user.FullName</h4>
                <p class="text-muted">@user.Email</p>
                <p><strong>Vai trò:</strong> @user.Role</p>
            </div>
        </div>

        <hr />

        <h5>Thông tin chi tiết</h5>
        <ul class="list-unstyled">
            <li><strong>Username:</strong> @user.Username</li>
            <li><strong>Số điện thoại:</strong> @user.PhoneNumber</li>
            <li><strong>Ngày tham gia:</strong> @user.JoinDate.ToString("dd/MM/yyyy")</li>
        </ul>

        <div class="mt-4">
            <button class="btn btn-primary me-2">Chỉnh sửa</button>
            <button class="btn btn-outline-danger">Đăng xuất</button>
        </div>
    </div>
</div>

@code {
    private User user = new()
        {
            FullName = "Nguyễn Văn A",
            Username = "nguyenvana",
            Email = "vana@example.com",
            Role = "Quản trị viên",
            PhoneNumber = "0123456789",
            JoinDate = new DateTime(2023, 5, 15),
            ProfileImageUrl = "https://via.placeholder.com/150?text=Avatar"
        };

    public class User
    {
        public string FullName { get; set; }
        public string Username { get; set; }
        public string Email { get; set; }
        public string Role { get; set; }
        public string PhoneNumber { get; set; }
        public DateTime JoinDate { get; set; }
        public string ProfileImageUrl { get; set; }
    }
}