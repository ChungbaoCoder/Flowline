@page "/products"

@inject ProductService service
@inject HttpClient Http
@inject NavigationManager NavigationManager

@if (products == null)
{
    <p>Đang tải dữ liệu ...</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="6">
                    <div>
                        <button class="btn" @onclick="NavigateToAdd">+ Tạo mới ..</button>
                    </div>
                </th>
            </tr>
            <tr>
                <th>Tên</th>
                <th>Nội dung</th>
                <th>Nội dung dưới</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (products != null && products.Any())
            {
                @foreach (var product in products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.UnderDescription</td>
                        <td>@product.StockLevel</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <button class="btn btn-sm btn-info" @onclick="() => NavigateToEdit(product.ProductId)">Sửa</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">Không có danh sách tồn tại.</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        var result = await service.GetListProducts();

        if (result != null)
            products = result.Data;
        else
            products = null;
    }

    private void NavigateToAdd()
    {
        NavigationManager.NavigateTo("/products/add");
    }

    private void NavigateToEdit(int id)
    {
        NavigationManager.NavigateTo($"/products/edit/{id}");
    }
}